<div class="controlset field{% if submitted and field.name in invalid %} error{% endif %}">
    <div class="field-group">
        <input type="checkbox" name="{{ field.name }}" id="{{ field.name }}"{% if submitted ? data[field.name] : field.value %} checked="checked"{% endif %} value="true"{% if field.class %} class="{{ field.class }}"{% endif %} />
        <label for="{{ field.name }}">{{ field.title }}{% if field.required %} <em class="required">*</em>{% endif %}</label>
    </div>
    {% if field.errorText and submitted and field.name in invalid %}<span class="error-text">{{ field.errorText }}</span>{% endif %}
</div>
